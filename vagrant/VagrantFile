Vagrant.configure("2") do |config|
  config.vm.box_url = "http://cloud-images.ubuntu.com/precise/current/precise-server-cloudimg-vagrant-amd64-disk1.box"

  config.vm.provision :shell, :inline => "apt-get -y install nfs-common"
  config.vm.define :marketplace_web do |web_config|

    web_config.vm.box = "marketplace_web"

    web_config.vm.provider :virtualbox do |vb|
      vb.customize ["modifyvm", :id, "--memory", "1024"]
    end

    web_config.vm.network :private_network, ip: "192.168.33.20"

    #nfs_setting = RUBY_PLATFORM =~ /darwin/ || RUBY_PLATFORM =~ /linux/

    if (RUBY_PLATFORM =~ /darwin/ || RUBY_PLATFORM =~ /linux/) != nil       
        config.vm.synced_folder "./../", "/usr/share/nginx/www/sites/sgmarketplace.com", type: "nfs"
    end

    

    web_config.vm.provision :puppet do |puppet|
      puppet.manifests_path = "manifests"
      puppet.module_path = "modules"
      puppet.manifest_file  = "marketplace_web.pp"
      puppet.options = "--verbose --debug"
    end
  end
end